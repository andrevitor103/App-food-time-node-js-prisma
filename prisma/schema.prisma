datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model Category {
  id            String @id @default(uuid())
  description   String @default("Sem categoria")
  snack      Snack[]
  @@map("Categories")
}

model Snack {
  id            String @id @default(uuid())
  name          String
  ingredients   String
  price         Decimal
  category Category @relation(fields: [category_id], references: [id] )
  category_id   String
  @@map("Snacks")
}
